doctype html
html
    head
        block title
            title #{title}
            //title Emer's App
            link(rel='stylesheet', href='app.css', type='text/css')
            link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
            script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js')
            script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')
    
    body
    
        nav.navbar.navbar-inverse
            .container-fluid
                .navbar-header
                    a.navbar-brand(href='#') Stuff Site!
                ul.nav.navbar-nav
                    li.active
                        a(href='/') Home
                    li
                        a(href='/products') Products
                    li
                        a(href='/new-product') New Product
                    li
                        a(href='/login') Login
                    li
                        a(href='/new-user') Register
                    li
                        a(href='/logout') Logout
                    li
                        a(href='http://google.ie', target='_blank') Google
                    li.search
                        form(method="post" action="search")
                            label(for="search") &emsp;
                            input(name="search", type="text", Placeholder="Search for....") 
                            button.button(type="submit") Search
                
        .main
            .container
            //-if(messages != 0)
            div.alert= messages
            block content
        
        footer.footer
            .container
                span.text-muted.page-footer Place sticky footer content here | Emer made this in nodejs
                
